<% content_for :title do %>
  <%= I18n.t('page.action_title.index', model: 'Articles') %>
  <%= link_to svg('new'), new_article_path, title: I18n.t('index_table.create'), class: 'icon' %>
<% end %>
  
<div class="index-page">
  <div class="pagination-info">
    <%= pagination_info(page: params[:page], page_count: @articles.count, full_count: @full_count) %>
  </div>

  <div></div>

  <div>
    <%= render 'index_table' %>
  </div>

  <div>
    <%= render 'search' %>
  </div>
</div>
