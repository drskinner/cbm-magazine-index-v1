<%= form_tag articles_path, method: 'get', class: 'search-form' do %>
  <fieldset>
    <legend>
      <span><%= I18n.t('search.title') %></span>
    </legend>
    <div class="search-field-top">
      <label><%= I18n.t('search.by_magazine') %></label>
      <%= select_tag :by_magazine_id,
                     options_for_select(Magazine.collection, params[:by_magazine_id]),
                     prompt: I18n.t('select.magazine'),
                     class: 'search-select' %>
    </div>
    <div class="search-field">
      <label><%= I18n.t('search.by_year') %></label>
      <%= select_tag :by_year,
                     options_for_select((1983..1999), params[:by_year]),
                     prompt: I18n.t('select.year'),
                     class: 'search-select' %>
      
    </div>
    <div class="search-buttons">
      <%= submit_tag I18n.t('button.search.submit'), name: nil, class: 'btn btn-default' %>
      <%= link_to I18n.t('button.search.clear'), articles_path, class: 'btn btn-clear' %>
    </div>
  </fieldset>
<% end %>
